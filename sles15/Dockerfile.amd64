FROM invent-registry.kde.org/sysadmin/ci-images/sles15-craft@sha256:e22e2c29ed22f603d358feab172282b0001e308b3943a13c7fbde5817e17757b

# using a non root user doesn't work with drone ðŸ’–
# https://stackoverflow.com/a/50613378
USER root


RUN zypper --non-interactive update && \
    zypper --non-interactive install \
    # rpm
    popt-devel file-devel \
    # dpkg
    libmd-devel  ncurses-devel \
